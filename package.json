{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "tailwind": "bunx tailwindcss -i ./resources/css/tailwind.css -o ./public/css/tailwind.css --watch --minify",
        "alpine": "bunx esbuild ./resources/js/alpine.js --outfile=./public/js/alpine.js --bundle --watch --minify",
        "font-awesome": "bunx esbuild ./resources/css/font-awesome.css --outfile=./public/css/font-awesome.css --bundle --minify --loader:.woff=file --loader:.woff2=file --loader:.ttf=file",
        "turbo": "bunx esbuild ./resources/js/turbo.js --outfile=./public/js/turbo.js --bundle --minify",
        "chart": "bunx esbuild ./resources/js/chart.js --outfile=./public/js/chart.js --bundle --minify"
    },
    "devDependencies": {
        "axios": "^1.7.4",
        "daisyui": "^4.12.10",
        "laravel-vite-plugin": "^1.0",
        "tailwindcss": "^3.4.13",
        "vite": "^5.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.6.0",
        "@hotwired/turbo": "^8.0.10",
        "chart.js": "^4.4.6"
    }
}
